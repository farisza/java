    private void btn_perbaruiActionPerformed(java.awt.event.ActionEvent evt) {                                             
        int selectedRow = tbl_data.getSelectedRow();
        if(selectedRow == -1){
            JOptionPane.showMessageDialog(this,"pilih baris yang akan di perbarui");
            return;
        }
        String id = tbl_data.getValueAt(selectedRow,0).toString();
        String nama = t_nama.getText();
        String telepon = t_telepon.getText();
        String tanggal = t_tanggal.getText();
        String tglout = t_tglout.getText();
        String jenis = t_jenis.getText();
        String tamu = t_tamu.getText();
        String metode = t_metode.getText();
        
          if (nama.isEmpty() || telepon.isEmpty()|| tanggal.isEmpty()||tglout.isEmpty()|| jenis.isEmpty()||tamu.isEmpty()||metode.isEmpty()){
        JOptionPane.showMessageDialog(this,"Semua kolom harus di isi!!","Validasi",JOptionPane.ERROR_MESSAGE);
            return;
          }
         
          try {
            String sql = "UPDATE hotel SET nama=?,telepon=?,tanggal=?,tglout =?,jenis = ?,tamu= ?,metode= ?,id=?";
            try (PreparedStatement st = conn.prepareCall(sql)) {
                st.setString (1,nama);
                st.setString (2,telepon);
                st.setString (3,tanggal);
                st.setString (4,tglout);
                st.setString (5,jenis);
                st.setString (6,tamu);
                st.setString (7,metode);
                st.setString (8,id);
                
                int rowUpdated = st.executeUpdate();
                if (rowUpdated > 0){
                    JOptionPane.showMessageDialog(this,"Data Berhasil Diperbarui");
                    resetFrom();
                    getData();
                }
            } 
            } 
          catch (Exception e) {
         Logger.getLogger(hotel.class.getName()).log(Level.SEVERE,null,e);   
        }
    }                                            

    private void btn_tambahActionPerformed(java.awt.event.ActionEvent evt) {                                           
      String nama = t_nama.getText();
      String telepon = t_telepon.getText();
      String tanggal = t_tanggal.getText();
      String tglout = t_tglout.getText();
      String jenis = t_jenis.getText();
      String tamu = t_tamu.getText();
      String metode = t_metode.getText();
      
      if (nama.isEmpty() || telepon.isEmpty()|| tanggal.isEmpty()||tglout.isEmpty()|| jenis.isEmpty()|| tamu.isEmpty()|| metode.isEmpty()){
        JOptionPane.showMessageDialog(this,"Semua holom harus di isi!!","Validasi",JOptionPane.ERROR_MESSAGE);
            return;
      }
      
        try {
            String sql = "INSERT INTO hotel (nama,telepon,tanggal,tglout,jenis,tamu,metode) VALUES(?,?,?,?,?,?)";
          try (PreparedStatement st = conn.prepareCall(sql)) {
              st.setString (1,nama);
              st.setString (2,telepon);
              st.setString (3,tanggal);
              st.setString (4,tglout);
              st.setString (5,jenis);
              st.setString (6,tamu);
              st.setString (7,metode);
              int rowInserted = st.executeUpdate();
              if (rowInserted > 0){
                  JOptionPane.showMessageDialog(this,"Data Berhasil Ditambahkan");
                  resetFrom();
                  getData();
              }
          }
        } catch (Exception e) {
            Logger.getLogger(hotel.class.getName()).log(Level.SEVERE,null,e);
        }
    }                                          

