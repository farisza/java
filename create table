    private void tbl_dataMouseClicked(java.awt.event.MouseEvent evt) {                                      
        int selectedRow = tbl_data.getSelectedRow();
        if (selectedRow !=-1){
            String nama = tbl_data.getValueAt(selectedRow,1).toString();
            String telepon = tbl_data.getValueAt(selectedRow,2).toString();
            String tanggal = tbl_data.getValueAt(selectedRow,3).toString();
            String tglout =tbl_data.getValueAt(selectedRow,4).toString();
            String jenis = tbl_data.getValueAt(selectedRow,5).toString();
            String tamu = tbl_data.getValueAt(selectedRow,6).toString();
            String metode = tbl_data.getValueAt(selectedRow,7).toString();
            
            t_nama.setText(nama);
            t_telepon.setText(telepon);
            t_tanggal.setText(tanggal);
            t_tglout.setText(tglout);
            t_jenis.setText(jenis);
            t_tamu.setText(tamu);
            t_metode.setText(metode);
                 
        }
        
        
        btn_tambah.setEnabled(false);
        btn_perbarui.setEnabled(true);
        btn_hapus.setEnabled(true);
    }                                     

    private void btn_hapusActionPerformed(java.awt.event.ActionEvent evt) {                                          
         int selectedRow = tbl_data.getSelectedRow();
        if(selectedRow == -1){
            JOptionPane.showMessageDialog(this,"pilih baris yang akan di perbarui");
            return;
        }
        
        int confirm = JOptionPane.showConfirmDialog(this,"Apakah anda yakin ingin menghapus data ini?","Konfirmasi",JOptionPane.YES_NO_OPTION);
        if (confirm == JOptionPane.YES_OPTION){
            String id = tbl_data.getValueAt(selectedRow,0).toString();
            
            try {
                String sql = "DELETE FROM hotel WHERE id=?";
                PreparedStatement st= conn.prepareStatement(sql);
                st.setString(1,id);
                
                
                int rowDelete = st.executeUpdate();
                if (rowDelete > 0){
                    JOptionPane.showMessageDialog(this,"Data Berhasil Dihapus");
                    resetFrom();
                    getData();
                }
                
                st.close();  
            } catch (Exception e) {
                 Logger.getLogger(hotel.class.getName()).log(Level.SEVERE,null,e); 
            }
    resetFrom();
    getData();
    nonAktifButton();
    aktifButton();
        }
        
    }                                         

    private void t_cariKeyTyped(java.awt.event.KeyEvent evt) {                                
       DefaultTableModel model= (DefaultTableModel)tbl_data.getModel();
        model.setRowCount(0);
        
        String cari  = t_cari.getText();
        
        try {
            String sql = "Select *From hotel WHERE nama ? OR LIKE telepon LIKE ? OR tanggal LIKE ?OR tglout LIKE OR jenis LIKE ? OR tamu LIKE ? metode LIKE ? ";
            PreparedStatement st = conn.prepareCall(sql); 
                    st.setString(1,"%"+cari+"%");
                    st.setString(2, "%"+cari+"%");
                    st.setString(3, "%"+cari+"%");
                    st.setString(4, "%"+cari+"%");
                    st.setString(5, "%"+cari+"%");
                    st.setString(6, "%"+cari+"%");
                    st.setString(7, "%"+cari+"%");
                    ResultSet rs = st.executeQuery(); 
                    {
                
                while (rs.next()){
                    int id = rs.getInt("id");
                    String nama = rs.getString ("nama");
                    String telepon = rs.getString ("telepon");
                    String tanggal = rs.getString ("tanggal");
                    String tglout = rs.getString ("tglout");
                    String jenis = rs.getString ("jenis"); 
                    String tamu = rs.getString ("tamu"); 
                    String metode = rs.getString ("metode"); 
                     
                    
                    Object[] rowData = {id,nama,telepon,tanggal,tglout,jenis,tamu,metode};
                    model.addRow(rowData);
                }
            }
        }catch (Exception e){
            Logger.getLogger(hotel.class.getName()).log(Level.SEVERE,null,e);  
        } 
    }                               

