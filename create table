    private void resetFrom() {
       t_nama.setText("");
       t_telepon.setText("");
       t_tanggal.setText("");
       t_tglout.setText("");
       t_jenis.setText("");
       t_tamu.setText("");
       t_metode.setText("");
       
    }

    private void nonAktifButton() {
        btn_perbarui.setEnabled(false);
        btn_hapus.setEnabled(false);
    }

    private void aktifButton() {
        btn_tambah.setEnabled(true);
        btn_batal.setEnabled(true);
    }


